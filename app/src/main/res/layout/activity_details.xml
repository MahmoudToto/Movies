<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/back_icon"

            />

        <TextView
            android:id="@+id/name_details"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Name of movie "
            android:textAlignment="center"
            android:textColor="#4A4B4D"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/id_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_reduce"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"

        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/toprated_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text=" 24/9/2001"
            android:textColor="@color/colorprimary"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metrophobic"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="Overview"

        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/overvie_movie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fontFamily="@font/metrophobic"
        android:text="Explain"
        android:scrollbars = "vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp" />

    <Button
        android:id="@+id/watch_id"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/corner_reduce"
        android:text="Watch"

        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp" />


</LinearLayout>