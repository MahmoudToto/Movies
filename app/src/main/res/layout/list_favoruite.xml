<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_margin="@dimen/_7sdp"
            app:cardElevation="@dimen/_5sdp"

            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/id_movies_fav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corner_reduce"
                android:scaleType="fitXY"

                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_of_movies_fav"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:fontFamily="@font/metrophobic"
        android:text="Name of movie "
        android:textColor="#4A4B4D"
        android:textSize="@dimen/_15ssp" />
    <TextView
        android:id="@+id/overview_movies_fav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:padding="@dimen/_2sdp"
        android:fontFamily="@font/metrophobic"
        android:text="Overview"
        android:textColor="#4A4B4D"
        android:textSize="@dimen/_15ssp" />
</LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_heartclicked"
        android:id="@+id/imgFav"
       android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
     />
</LinearLayout>